@* @{
    ViewData["Title"] = "Create - Product Page";
} *@﻿

@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="border p-3">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />
            <div class="row pt-2">
                <div class="col-10">

                    @*<div asp-validation-summary="ModelOnly"></div>*@
                    <div class="py-2 col-12">
                        <label asp-for="Product.Title" class="ms-2 text-muted"></label>
                        <input asp-for="Product.Title" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                    </div>
                    
                    <div class="py-2 col-12">
                        <label asp-for="Product.Description" class="ms-2 text-muted"></label>
                        <textarea asp-for="Product.Description" class="form-control border-0 shadow" cols="30" rows="3"></textarea>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.ISBN" class="ms-2 text-muted"></label>
                        <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.Author" class="ms-2 text-muted"></label>
                        <input asp-for="Product.Author" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Author" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.ListPrice" class="ms-2 text-muted"></label>
                        <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.Price" class="ms-2 text-muted"></label>
                        <input asp-for="Product.Price" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.Price50" class="ms-2 text-muted"></label>
                        <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.Price100" class="ms-2 text-muted"></label>
                        <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.CategoryId" class="ms-2 text-muted"></label>
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>

                    <div class="py-2 col-12">
                        <label asp-for="Product.ImageUrl" class="ms-2 text-muted"></label>
                        <input type="file" name="file" asp-for="Product.ImageUrl" class="form-control border-0 shadow" />
                    </div>

                </div>
                <div class="col-2">
                    <label for="ProductImage" class="ms-2 text-muted">Product Image</label>
                        <img src="@Model.Product.ImageUrl" name="ProductImage" id="ProductImage" style="width:100%; max-width:300px; height:200px; border-radius:5px; border:1px solid #bbb9b9" />
                </div>               
            </div>

           
 
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if(Model.Product.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                        
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border  form-control">
                             Back to List
                        </a>
                    </div>
                </div>


           
        </form>
        </div>
    </div>
</div>




@section Scripts{
    <script>
         
    </script>
    
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}